{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>LastLogin</th>
                <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ConfirmationToken</th>
                <td>{{ user.confirmationToken }}</td>
            </tr>
            <tr>
                <th>PasswordRequestedAt</th>
                <td>{{ user.passwordRequestedAt ? user.passwordRequestedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}

    <h1>Book</h1>

    <table class="table">
        <tbody>
        {% for book in book %}
        <tr>
            <td>{{ book.id }}</td>
            <td>{{ book.start ? book.start|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ book.end ? book.end|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <a href="{{ path('book_show', {'id': book.id}) }}">Show</a>
                <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                {{ include('book/_delete_form.html.twig') }}
            </td>
        </tr>
        {% else %}
            <tr>
                <td colspan="5">niks gevonden</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>


{% endblock %}



